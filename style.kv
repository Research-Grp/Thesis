Screen:
    name: "main_screen"
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "My application"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
    MDNavigationLayout:
        WindowManager:
            id:screen_manager
            HomeScreen:
            AboutScreen:
            DeveloperScreen:
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: "vertical"
            ScrollView:
                MDList:
                    OneLineListItem:
                        text:"Home"
                        on_press:
                            nav_drawer.set_state("close")
                            if screen_manager.current != "home": \
                            screen_manager.current = "home" ;
                            screen_manager.transition.direction = "right"
                            nav_drawer.set_state("close")
                    OneLineListItem:
                        text: "About"
                        on_press:
                            nav_drawer.set_state("close")
                            if screen_manager.current != "about": \
                            screen_manager.current = "about";
                            screen_manager.transition.direction = "right"
                            nav_drawer.set_state("close")
                    OneLineListItem:
                        text: "Developer options"
                        on_press:
                            if screen_manager.current != "dev": \
                            screen_manager.current = "dev";
                            screen_manager.transition.direction = "left"
                            nav_drawer.set_state("close")
<HomeScreen>:
    name: "home"
    FloatLayout:
        orientation: "vertical"
        Screen:
            MDCard:
#                text: "Drag here"
                halign: "center"
                size_hint: 0.6, 0.6
#                size: "300dp", "500dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDLabel:
                    text: "Choose a file or drag here"
                    font_style: "H5"
                    halign: "center"
                    pos_hint: {"center_y": 0.5}
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]

        MDFillRoundFlatButton:
            markup: True
            text: "[b]PROCESS[/b]"
            font_size: 22
            md_bg_color: 0.30, 0.62, 0.41, 1
            size_hint: 0.18, 0.08
            pos_hint: {"center_x": 0.35, "center_y": 0.1}
            padding: 10

        MDFillRoundFlatButton:
            markup: True
            text: "[b]CANCEL[/b]"
            font_size: 22
            md_bg_color: 0.65, 0.20, 0, 1
            size_hint: 0.18, 0.08
            pos_hint: {"center_x": 0.65, "center_y": 0.1}


<AboutScreen>:
    name: "about"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Welcome to the About Screen!"
            halign: "center"
<DeveloperScreen>:
    name: "dev"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Welcome to the Developer Screen!"
            halign: "center"
